


<div id="home-container" class="home-container">
<% if (locals.user) {%>

<section id="feed-posts" class="feed-posts">
  <div class="card">
    <div class="container">
      <form action="/post/create" id="post-form" method="POST" enctype="multipart/form-data">
          <textarea name="content" cols="30" rows="3" placeholder="Want to share something..." class="post-textarea"></textarea>
          <input type='file' name='postfile'> 
          <input type="submit" value="Post">
      </form>  
    </div>
  </div>

<%}%>

<div id="post-container" class="post-container">
  <ul>
      <% for (post of posts) { %>
        <%-include('_post')-%>
        <% } %>
  </ul>
</div>

</section>


<aside class="sidebar" id="sidebar">
  <%if (locals.user){%>
    <div class="sidebar-container">
      <a href="/user/profile/<%=user._id%>" class="item">
        <% if(user.avatar){%>
        <img  src='<%=user.avatar%>' alt='<%=user.name%>'class="img">
        <%} else{%>
          <img src="https://cdn1.iconfinder.com/data/icons/user-pictures/100/unknown-512.png" class='img'>
          <%}%>
        <span>
          <%=user.name-%>
        </span>
        
      </a>
    </div>
  <%}%>
</aside>

<aside class="friends-sidebar" id="friends-sidebar">
  <%if (locals.user){%>
    <div class="sidebar-container">
      <ul>
        <% for (freind of locals.user.friendships){%>
          <li class="item">
            <% if(freind.avatar) {%>
              <img src="<%=freind.avatar%>" class='img'>
              <% }else{%>
                <img src="https://cdn1.iconfinder.com/data/icons/user-pictures/100/unknown-512.png" class='img'>
                <%}%>
            <a href='/user/profile-freind/?id=<%=freind.id%>&type=<%=freind._id%>'> <%=freind.name%></a>
          </li>
      <% } %>
      </ul>
    </div>
  <%}%>
</aside>

